{
  // "search.location": "panel",
  "editor.fontFamily": "Dank Mono, Operator Mono, Fira Code, Monaco",
  "editor.fontSize": 16,
  "editor.lineHeight": 26,
  "editor.formatOnSaveTimeout": 250,
  "editor.renderWhitespace": "all",
  "window.title": "${rootName}",
  // if window.nativeFullScreen: false, "custom" title bar doesn't work
  "window.nativeFullScreen": true,
  "window.restoreWindows": "all",
  "workbench.colorTheme": "Dark Sea",
  "workbench.iconTheme": "file-icons-colourless",
  "explorer.confirmDragAndDrop": false,
  "flow.useNPMPackagedFlow": true,
  "search.exclude": {
    "**/bower_components": false,
    "**/node_modules": false
  },
  "colorize.languages": [
    "javascript",
    "reason"
  ],
  "debug.showInStatusBar": "always",
  "workbench.panel.defaultLocation": "bottom",
  "explorer.confirmDelete": false,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "nightswitch.location": "43.60426,1.44367",
  "nightswitch.themeDay": "Highland Winter",
  "nightswitch.themeNight": "Dark Sea",
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.requireConfig": true,
  "editor.formatOnSave": true,
  "prettier.disableLanguages": [
    "vue",
    "html"
  ],
  "editor.trimAutoWhitespace": false,
  "files.insertFinalNewline": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "window.zoomLevel": 0
}
